                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                  \n      </td>\n    </tr>\n    <tr class=\"function-overload-parameter\">\n      <td class=\"param-name\">\n        <a id=\"opts\"></a>\n        <code>opts</code>\n      </td>\n      <td class=\"param-type\"><code>HandleNavigationOpts&#x3C;T></code></td>\n      <td class=\"param-description\">\n                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     \n                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               \n      </td>\n    </tr>\n  </tbody>\n</table>\n\n\n\n\n\n\n\n\n\n  \n\n  \n\n<section class=\"description\">\n  <h2 id=\"description\">Description<a title=\"Link to this heading\" class=\"header-link\" aria-hidden=\"true\" href=\"api/router-store/data-persistence/navigation#description\"><i class=\"material-icons\">link</i></a></h2>\n  <p>Data fetching implemented naively suffers from race conditions and poor error handling.</p>\n<p><code>navigation</code> addresses these problems.</p>\n<p>It checks if an activated router state contains the passed in component type, and, if it does, runs the <code>run</code>\ncallback. It provides the activated snapshot associated with the component and the current state. And it only runs\nthe last request.</p>\n\n</section>\n\n\n\n  \n<section class=\"usage-notes\">\n  <h2 id=\"usage-notes\">Usage notes<a title=\"Link to this heading\" class=\"header-link\" aria-hidden=\"true\" href=\"api/router-store/data-persistence/navigation#usage-notes\"><i class=\"material-icons\">link</i></a></h2>\n  <code-example language=\"typescript\">\n@Injectable()\nclass TodoEffects {\n  loadTodo$ = <a href=\"api/effects/createEffect\" class=\"code-anchor\">createEffect</a>(() =>\n    this.actions$.pipe(\n      // listens for the routerNavigation action from @ngrx/router-store\n      navigation(TodoComponent, {\n        run: (activatedRouteSnapshot: ActivatedRouteSnapshot) => {\n          return this.backend\n            .fetchTodo(activatedRouteSnapshot.params['<a href=\"api/data/UpdateResponseData#id\" class=\"code-anchor\">id</a>'])\n            .pipe(\n              map((todo) => ({\n                type: 'LOAD_TODO_SUCCESS',\n                todo: todo,\n              }))\n            );\n        },\n        onError: (\n          activatedRouteSnapshot: ActivatedRouteSnapshot,\n          error: any\n        ) => {\n          // we can log and error here and return null\n          // we can also navigate back\n          return null;\n        },\n      })\n    )\n  );\n\n  constructor(private actions$: <a href=\"api/effects/Actions\" class=\"code-anchor\">Actions</a>, private backend: Backend) {}\n}\n</code-example>\n\n</section>\n\n\n\n  </div>\n</article>\n\n<!-- links to this doc:\n - api/router-store/data-persistence\n-->\n<!-- links from this doc:\n - /api\n - api/data/UpdateResponseData#id\n - api/effects/Actions\n - api/effects/createEffect\n - api/router-store\n - api/router-store/data-persistence\n - api/router-store/data-persistence/navigation#description\n - api/router-store/data-persistence/navigation#navigation\n - api/router-store/data-persistence/navigation#usage-notes\n - api/store/Action\n - https://github.com/ngrx/platform/edit/master/modules/router-store/data-persistence/src/operators.ts?message=docs(router-store)%3A%20describe%20your%20change...#L300-L378\n - https://github.com/ngrx/platform/tree/16.0.0/modules/router-store/data-persistence/src/operators.ts#L300-L378\n-->"
